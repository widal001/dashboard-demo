---
import "@/styles/globals.css";
import Layout from "@/layouts/Layout.astro";

import { fetchSprintMetrics } from "@/lib/sprint";

import DashboardHeader from "@/components/dashboard/DashboardHeader.astro";
import DashboardViews from "@/components/dashboard/dashboard-views";

const views = [
  {
    name: "Sprint 12",
    key: "sprint-12",
    contents: fetchSprintMetrics(4),
  },
  {
    name: "Sprint 11",
    key: "sprint-11",
    contents: fetchSprintMetrics(0),
  },
  {
    name: "Sprint 10",
    key: "sprint-10",
    contents: fetchSprintMetrics(0),
  },
];
const title = "Sprint Dashboard";
---

<Layout title={title}>
  <DashboardHeader title={title} />
  <DashboardViews views={views} client:load />
</Layout>
