---
import "@/styles/globals.css";
import Layout from "@/layouts/Layout.astro";

import { fetchDeliveryMetrics } from "@/lib/delivery";

import DashboardHeader from "@/components/dashboard/DashboardHeader.astro";
import DashboardViews from "@/components/dashboard/dashboard-views";

const views = [
  {
    name: "Static site public launch",
    key: "issue-77",
    contents: fetchDeliveryMetrics(4),
  },
  {
    name: "API soft launch",
    key: "issue-42",
    contents: fetchDeliveryMetrics(0),
  },
  {
    name: "Open source group kickoff",
    key: "issue-63",
    contents: fetchDeliveryMetrics(0),
  },
];
const title = "Delivery Dashboard";
---

<Layout title={title}>
  <DashboardHeader title={title} />
  <DashboardViews views={views} client:load />
</Layout>
